/* pages/search/search.wxss */
.van-cell .iconview {
	margin-right: 10rpx;
}
.van-cell .iconview .icon {
	width: 130rpx;
	height: 160rpx;
}
.van-cell .shortinfo {
	text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 3;
	/*两行,超出为省略号*/
	-webkit-box-orient: vertical;
	align-content: center;
	margin-bottom: 15rpx;
}
.van-cell .auty {
	display: flex;
}
.van-cell .auty .author {
	flex: 5;
}
.van-cell .auty .type {
	flex: 2;
	background-color: rgba(196, 180, 191, 0.3);
	border-radius: 30rpx;
	color: #5f5b5b;
	font-size: 10px;
	text-align: center;
	padding: 0 8rpx;
	margin-left: 10rpx;
}
.bottomline{
	font-size: 12px;
	color: #aaa;
	text-align: center;
}
.loding{
	text-align: center;
	margin: 0 auto;
}

.shownone{
	display:none
}
rich-text{
	display:inline-block;
